#!/bin/bash

set -e

# Perform an upgrade before booting up web/worker processes
case "$1" in
    atlas)
        gosu app atlas migrate
    ;;
esac

# Check if we're trying to execute a bin
if [ -f "/usr/src/app/bin/$1" ]; then
    if [ "$(id -u)" = '0' ]; then
        exec gosu app "$@"
    fi
fi

exec "$@"
